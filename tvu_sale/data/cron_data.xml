<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">
    <record id="auto_cancel_expired_quotations" model="ir.cron">
      <field name="name">Auto-Cancel Expired Quotations</field>
      <field name="model_id" ref="sale.model_sale_order" />
      <field name="state">code</field>
      <field name="code">model._check_expiration_date()</field>
      <field name="active">True</field>
      <field
        name="nextcall"
        eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 04:00:00')"
      />
      <field name="interval_number">1</field>
      <field name="interval_type">days</field>
      <field name="numbercall">-1</field>
    </record>
  </data>
</odoo>
