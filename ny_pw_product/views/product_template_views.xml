<odoo>
  <record id="view_product_template_form_custom" model="ir.ui.view">
    <field name="name">product.template.form.custom</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='list_price']" position="after">
        <field name="pair_per_case" />
        <field name="price_per_pair" />
        <field
          name="sales_price"
          readonly="1"
          attrs="{'readonly': [('pair_per_case', '!=', False), ('price_per_pair', '!=', False)]}"
        />
      </xpath>
    </field>
  </record>
</odoo>
