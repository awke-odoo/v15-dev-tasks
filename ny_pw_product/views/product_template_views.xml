<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_product_template_form_custom" model="ir.ui.view">
    <field name="name">product.template.form.custom</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view" />
    <field name="arch" type="xml">
      <xpath
        expr="//group[@name='group_standard_price']/label"
        position="before"
      >
        <field name="pair_per_case" />
        <field name="price_per_pair" />
        <field
          name="list_price"
          attrs="{'readonly': [('price_per_pair', '!=', False), ('pair_per_case', '!=', False)]}"
        />
      </xpath>
    </field>
  </record>
</odoo>
